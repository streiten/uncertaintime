extends layout

block content
    .app-wrap
        .page-wrap

            include partials/time.pug

            .debug-wrap
                table
                    tr
                        td Start
                        td {{ periodStart }}
                    tr
                        td End
                        td {{ periodEnd }}
                    tr
                        td Uncertain
                        td {{ uctActive }}
                    tr
                        td Client Time:
                        td {{ clientTime }}
                    tr
                        td(colspan="2")
                            | <svg id="uncertainty-time-pie" class="pie" viewBox="0 0 32 32">
                            | <circle id="real-time-pie-circle" r="16" cx="16" cy="16" />
                            | <circle id="uncertainty-time-pie-circle" r="16" cx="16" cy="16" /></svg>

